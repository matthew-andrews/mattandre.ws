<article id="<%= post.layout %>-<%= post.slug %>" class="article" itemscope itemType="http://schema.org/BlogPosting">
	<div class="article__meta">
		<% if (post.layout !== 'page') { %>
			<%- partial('post/date', { class_name: 'article__date', date_format: null }) %>
		<% } %>
		<%- partial('post/category') %>
	</div>
	<div class="article__inner">
		<% if (post.link || post.title) { %>
			<header class="article__header"><%- partial('post/title', { class_name: 'article__title' }) %></header>
		<% } %>
		<div class="article-entry article__entry" itemprop="articleBody">
			<% if (post.excerpt && index) { %>
				<%- post.excerpt %>
				<p class="article-more-link">
					<a href="<%- url_for(post.path) %>#more">Read More</a>
				</p>
			<% } else { %>
				<%- post.content %>
			<% } %>
		</div>
		<% if (!index) { %>
			<footer class="article__footer">
				<iframe src="https://mattandrews.substack.com/embed" width="100%" height="320" style="background:white;" frameborder="0" scrolling="no"></iframe>
			</footer>
		<% } %>
	</div>
	<% if (!index) { %>
		<%- partial('post/nav') %>
	<% } %>
</article>
